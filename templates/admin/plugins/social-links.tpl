<div class="row">
	<div class="col-xs-12">
		<div class="panel panel-default">
			<div class="panel-heading">Global Social Links</div>
			<div class="panel-body">
				<form role="form" class="form-horizontal social-links-settings">
					<div class="form-group">
            <label class="col-sm-2 control-label"><i class="fab fa-discord"></i></label>
            <div class="col-sm-10">
              <input type="url" class="form-control" name="discord_link" placeholder="https://discord.gg/" />
            </div>
          </div>

					<div class="form-group">
            <label class="col-sm-2 control-label"><i class="fab fa-tiktok"></i></label>
            <div class="col-sm-10">
              <input type="url" class="form-control" name="tiktok_link" placeholder="https://tiktok.com/" />
            </div>
          </div>

					<div class="form-group">
            <label class="col-sm-2 control-label"><i class="fab fa-youtube"></i></label>
            <div class="col-sm-10">
              <input type="url" class="form-control" name="youtube_link" placeholder="https://www.youtube.com/" />
            </div>
          </div>

					<div class="form-group">
            <label class="col-sm-2 control-label"><i class="fab fa-vk"></i></label>
            <div class="col-sm-10">
              <input type="url" class="form-control" name="vk_link" placeholder="https://vk.com/" />
            </div>
          </div>

					<div class="form-group">
            <label class="col-sm-2 control-label"><i class="fab fa-instagram"></i></label>
            <div class="col-sm-10">
              <input type="url" class="form-control" name="instagram_link" placeholder="https://www.instagram.com/" />
            </div>
          </div>

					<div class="form-group">
            <label class="col-sm-2 control-label"><i class="fab fa-twitter"></i></label>
            <div class="col-sm-10">
              <input type="url" class="form-control" name="twitter_link" placeholder="https://twitter.com/" />
            </div>
          </div>

					<div class="form-group">
            <label class="col-sm-2 control-label"><i class="fab fa-twitch"></i></label>
            <div class="col-sm-10">
              <input type="url" class="form-control" name="twitch_link" placeholder="https://www.twitch.com/" />
            </div>
          </div>
				</form>
			</div>
		</div>
	</div>
</div>

<button id="save" class="floating-button mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored">
	<i class="material-icons">save</i>
</button>